# ===== APPLICATION CONFIGURATION =====
# Port for the HTTP server to listen on
PORT=8080

# Environment setting (development, staging, production)
ENVIRONMENT=development

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# ===== DATABASE CONFIGURATION =====
# PostgreSQL database connection URL
# Format: postgres://username:password@host:port/database?sslmode=disable
DATABASE_URL=postgres://assessment_user:assessment_password@localhost:5432/assessment_db?sslmode=disable

# ===== REDIS CONFIGURATION =====
# Redis connection URL for caching and session storage
# Format: redis://username:password@host:port/database
REDIS_URL=redis://localhost:6379/0

# ===== AUTHENTICATION =====
# JWT secret key for token signing (use a strong, random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ===== EVENT SYSTEM CONFIGURATION =====
# Enable/disable event publishing
EVENTS_ENABLED=true

# Event publisher type (kafka, mock)
EVENTS_PUBLISHER=kafka

# Kafka broker addresses (comma-separated for multiple brokers)
KAFKA_BROKERS=localhost:9092

# Kafka topic for notifications
NOTIFICATION_TOPIC=notifications

# ===== DEVELOPMENT SETTINGS =====
# Enable debug logging for development
DEBUG=true

# Enable request logging
LOG_REQUESTS=true

# ===== SECURITY SETTINGS =====
# CORS allowed origins (comma-separated, use * for development only)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Maximum request size (in bytes)
MAX_REQUEST_SIZE=10485760

# Request timeout (in seconds)
REQUEST_TIMEOUT=30

# ===== RATE LIMITING =====
# Rate limit per minute per IP
RATE_LIMIT_PER_MINUTE=100

# Rate limit burst size
RATE_LIMIT_BURST=10

# ===== FILE UPLOAD SETTINGS =====
# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE=10

# Allowed file types for uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Upload directory
UPLOAD_DIR=./uploads

# ===== CASDOOR INTEGRATION (if using Casdoor for auth) =====
# CASDOOR_ENDPOINT=http://localhost:8000
# CASDOOR_CLIENT_ID=your-client-id
# CASDOOR_CLIENT_SECRET=your-client-secret
# CASDOOR_ORGANIZATION=your-organization
# CASDOOR_APPLICATION=your-application

# ===== MONITORING & HEALTH CHECKS =====
# Health check interval (in seconds)
HEALTH_CHECK_INTERVAL=30

# Enable metrics collection
METRICS_ENABLED=true

# Metrics port (if different from main port)
METRICS_PORT=9090